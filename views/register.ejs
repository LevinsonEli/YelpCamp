<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;"><i class="fas fa-user-plus"></i> Sign Up</h1>
        <div class="regBox">
            <form action="/register" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username" minlength="3" required autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password" minlength="3" required autocomplete="off">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Sign Up</button>
                </div>
            </form>
            
            <a href="/">Main Page</a>
        </div>
    </div>
</div>

<% include ./partials/footer %>