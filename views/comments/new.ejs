<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new comment to <%= campground.name %></h1>
        <div class="regBox">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                   <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            
            <a href="/campgrounds">BACK</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>